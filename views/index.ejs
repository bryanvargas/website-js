<!DOCTYPE html>
<html lang="en">
	<head>
		<% include template/head.ejs %>
	</head>
	<body>
	<% include template/header.ejs %>
	
	<div class="main">
		<div class="container">
			<div class="div-main">
				<div class="row">
					<div>
						<h1><%= title%></h1>
						<div>Were are offering <%= webdata.courses.length %>Courses</div>
						<div class="col-md-9">
							<h1>Otros cursos populares</h1>
							<% webdata.courses.forEach(function(item) {%>
							<% if(item.isPopular) {%>
							<div class="main-inner">
								<div class="row">
									<div class="col-md-5 col-sm-6">
										<img class="pull-left img-responsive" src="<%= item.image %>" alt="<%= item.title%>">
									</div><!-- fin de col-md-5 -->
									<div class="col-md-7 col-sm-6">
										<h2 style="margin-top: 0px; "><%= item.title %></h2>
										<h3 class="Price bagde">$ <%= item.price %></h3>
										<p><%= item.descripcion %></p>
										<a href="#"> Popular </a>
									</div><!-- fin de col-md-7 -->
								</div><!-- fin de row -->
							</div><!-- fin de main-inner  -->
							<% } %>
							<% }); %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
							
	<% include template/footer.ejs %>
	<% include template/appscript.ejs %>

	</body>
</html>